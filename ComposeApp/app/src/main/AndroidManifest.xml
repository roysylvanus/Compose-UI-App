<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.malikali.composeapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeApp">
        <activity
            android:name=".animation.AnimationCodelab"
            android:exported="true"
            android:label="@string/title_activity_animation_codelab"
            android:theme="@style/Theme.ComposeApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".theme.ThemeActivity"
            android:exported="false"
            android:label="@string/title_activity_theme"
            android:theme="@style/Theme.ComposeApp"/>

        <activity
            android:name=".BasicLayoutsApp"
            android:exported="false"
            android:label="@string/title_activity_basic_layouts_app"
            android:theme="@style/Theme.ComposeApp" />
        <activity
            android:name=".theme.Splash"
            android:exported="false"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.ComposeApp" />
        <activity
            android:name=".theme.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.ComposeApp" />
    </application>

</manifest>